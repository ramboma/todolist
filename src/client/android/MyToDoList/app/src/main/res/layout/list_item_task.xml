<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        android:id="@+id/list_item_task_solved" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_task_solved"
        android:padding="4dp"
        android:id="@+id/list_item_task_title" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_task_solved"
        android:padding="4dp"
        android:layout_below="@id/list_item_task_title"
        android:layout_centerHorizontal="true"
        android:id="@+id/list_item_task_delayTime" />
</RelativeLayout>